<configure
   xmlns="http://namespaces.zope.org/zope"
   xmlns:zojax="http://namespaces.zope.org/zojax"
   xmlns:browser="http://namespaces.zope.org/browser"
   i18n_domain="zojax.article">

  <permission
     id="zojax.AddArticle"
     title="Add article" />

  <permission
     id="zojax.ManageArticle"
     title="Manage article" />

  <zojax:permission
     permission="zojax.AddArticle"
     category="zojax.content.permissions.interfaces.IAddPermission" />

  <zojax:contentpermission
     for="zojax.content.space.interfaces.IContentSpace"
     permission="zojax.AddArticle"
     managepermission="zojax.ManageContentPermission"
     class=".permission.SpacePermission"
     category="zojax.content.permissions.interfaces.IAddPermission" />

  <!-- default article drafts container permissions -->
  <permissions for=".interfaces.IArticleDrafts" name="default">
    <denyAll permission="zope.View" />
    <denyAll permission="zojax.ModifyContent" />
    <denyAll permission="zojax.DeleteContent" />
    <denyAll permission="zojax.changeOwnership" />

    <grant permission="zojax.ModifyContent"
	   role="content.Owner
		 group.Member
		 group.Manager
		 zope.Manager" />

    <grant permission="zojax.DeleteContent"
	   role="content.Owner
		 zope.Manager" />
    
    <grant permission="zope.app.dublincore.change"
	   role="zope.Manager
		 group.Member
		 group.Manager
	     	 content.Owner" />

    <grant permission="zope.View"
	   role="zope.Manager
		 group.Member
		 group.Manager
	     	 content.Owner" />
  </permissions>

  <!-- default Article Draft permissions -->
  <permissions for=".interfaces.IArticleDraft" name="default">
    <denyAll permission="zope.View" />
    <denyAll permission="zojax.ModifyContent" />
    <denyAll permission="zojax.DeleteContent" />

    <grant permission="zojax.ModifyContent"
	   role="content.Owner
		 group.Member
		 group.Manager
		 zope.Manager" />

    <grant permission="zojax.DeleteContent"
	   role="content.Owner
		 group.Manager
		 zope.Manager" />

    <grant permission="zojax.ManageArticle"
	   role="content.Owner
		 group.Manager
		 zope.Manager" />

    <grant permission="zope.app.dublincore.change"
	   role="zope.Manager
		 group.Member
		 group.Manager
	     	 content.Owner" />

    <grant permission="zope.View"
	   role="zope.Manager
		 group.Member
		 group.Manager
	     	 content.Owner" />
  </permissions>

  <!-- default Article permissions -->
  <permissions for=".interfaces.IArticle" name="default">
    <unsetAll permission="zope.View" />
    <denyAll permission="zojax.ModifyContent" />
    <denyAll permission="zojax.DeleteContent" />
    <denyAll permission="zope.app.dublincore.change" />

    <grant permission="zojax.ManageArticle"
	   role="content.Owner
		 zope.Manager" />
  </permissions>

  <!-- default IArticles permissions -->
  <permissions for=".interfaces.IArticles" name="default">
    <grant permission="zojax.AddArticle"
	   role="group.Member
		 group.Manager
		 zope.Manager" />
  </permissions>

</configure>
